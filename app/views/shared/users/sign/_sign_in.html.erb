
  <div class="row">
    <div class="col-12 col-md-4 col-lg-4 mx-auto">
      <div class="card border-secondary container">
        <h2 class="font-bold text-4xl text-center">Connexion</h2>
        <br>
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.email_field :email,
                        required: false,
                        label: "N° tel ou Adresse e-mail:",
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        placeholder: "tapez ici" %>
            <%= f.password_field :password,
                        required: false,
                        label: "mot de passe:",
                        placeholder:"taper vote mot de passe ici",
                        input_html: { autocomplete: "current-password" } %>
            <%= f.check_box :remember_me, label: "Restez connecté", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.submit "Connexion",  class: 'btn btn-primary font-bold'%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

