<div class="row">
  <div class="col-12 col-md-6 col-lg-6 mx-auto">
    <div class="card container">
      <h2 class="font-bold text-4xl text-center">Inscription</h2>
      <p class="mx-auto font-bold">Bénéficiez des Sujets déja traité...</p>
      <br />
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-inputs">

          <%= f.text_field :username,
                      autofocus: true,
                      required: true,
                      hide_label: true,
                      placeholder: "Nom Complet:"
                       %>
          <%= f.phone_field :contact,
                      hide_label: true,
                      placeholder: "N° téléphone:",
                      required: true,
                      help: "Nous utiliserons votre numéro de téléphone pour protéger votre compte",
                      maxlenght: "8" %>

          <%= f.text_field :matricule,
                    hide_label: true,
                    placeholder: "N° matricule national:",
                    required: true,
                    help: "Votre matricule National." %>
          <%= f.email_field :email,
                      required: true,
                      hide_label: true,
                      placeholder: "Adresse e-mail:",
                      input_html: { autocomplete: "email" },
                      help: "Pas d'e-mail: utlise ton N° Matricule et ajoute @gmail.com a la fin." %>

          <%= f.password_field :password,
                      required: true,
                      hide_label: true,
                      placeholder: " Entrez votre mot de passe:",
                      input_html: { autocomplete: "new-password" },
                      help: "le mot de passe doit 6 lettres au moins." %>

          <%= f.password_field :password_confirmation,
                      required: true,
                      hide_label: true,
                      placeholder:  'retaper le mot de passe:',
                      input_html: { autocomplete: "new-password" },
                      help: "confirmez votre mot de passe." %>

          <%= f.hidden_field :role, value: "X12" %>
        <div class="form-actions">
          <%= f.submit "Inscription", class: 'btn btn-success font-bold'%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
