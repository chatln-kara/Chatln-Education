
<!-- content feed/!-->
<% @courses.each do |course| %>
  <div class="mt-2">
    <div class="card border container ">

      <!-- title!-->
      <h1 class=" card-text no-underline mt-2 ">
        <%= link_to course, class: "text-lg leading-tight font-semibold text-gray-900 hover:no-underline hover:font-semibold hover:text-lg"  do %>
          <%= course.title %>
        <% end %>
      </h1>

        <!-- avatar data/!-->
      <div class="flex items-cente mt-4 ml-6">
        <img class="w-10 h-10 bg-gray-400 rounded-full">
        <div class="text-sm ml-4">
          <p class="text-gray-900 leading-none capitalize font-bold"> <%= course.user.username %> </span>
          </p>
          <% if student_role(current_user) %>
            <p class="text-gray-600">
             Prof de <%= course.matiere.title %> au <%= course.user.school %> - <%= course.user.city %>
            </p>
          <% else %>
            <p class="text-gray-600">
             <%= course.user.level_id %> <%= course.matiere.title %> au <%= course.user.school %> - <%= course.user.city %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- content/!-->

      <!-- clic sur toute la surface du contenu/!-->
      <%= link_to course_path(course) do%>
        <div class=" card-text ">
          <p class="ml-2">
            <%=  sanitize(course.content[ 0 ... 1000]) %>
          </p>
          <%= link_to course_path(course) do%>
            <span class="btn btn-outline-secondary m-2 hover:no-underline">
            <i class="fa fa-plus" aria-hidden="true"></i> Voir plus ...</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
