<div class="mb-3">
  <%= link_to new_room_path, class: 'btn btn-primary' do %>
    <i class="fa fa-group" aria-hidden="true"></i> Créer un Groupe d'étude
  <% end %>
</div>

<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    Vous n'avez pas de groupe étude
  </div>
<% end %>
