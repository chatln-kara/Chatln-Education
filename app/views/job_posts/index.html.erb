<p id="notice"><%= notice %></p>

<h1>Job Posts</h1>

<table>
  <thead>
    <tr>
      <th>Nom complet</th>
      <th>City</th>
      <th>Matiere</th>
      <th>Promotion</th>
      <th>Experience</th>
      <th>Nb classe</th>
      <th>Contact first</th>
      <th>Contact sec</th>
      <th>Know it</th>
      <th>School</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_posts.each do |job_post| %>
      <tr>
        <td><%= job_post.nom_complet %></td>
        <td><%= job_post.city %></td>
        <td><%= job_post.matiere %></td>
        <td><%= job_post.promotion %></td>
        <td><%= job_post.experience %></td>
        <td><%= job_post.nb_classe %></td>
        <td><%= job_post.contact_first %></td>
        <td><%= job_post.contact_sec %></td>
        <td><%= job_post.Know_IT %></td>
        <td><%= job_post.school %></td>
        <td><%= job_post.gender %></td>
        <td><%= link_to 'Show', job_post %></td>
        <td><%= link_to 'Edit', edit_job_post_path(job_post) %></td>
        <td><%= link_to 'Destroy', job_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Post', new_job_post_path %>
