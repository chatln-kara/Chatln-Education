<% if status_user(current_user) %>
  <%= bootstrap_form_for(@course) do |f| %>

    <div class="form-inputs">
      <%= f.text_field :title, label: 'Titre:', placeholder:"Ecrire le titre du Renforcément" %>
      <%= f.text_area :content, label: 'Renforcément:', id: 'summernote'  %>
      <!--
        <button id="edit" class="btn btn-primary" onclick="edit()" type="button">Edit 1</button>
        <button id="save" class="btn btn-primary" onclick="save()" type="button">Save 2</button>
        <div class="click2edit">click2edit</div>
      </!-->
    </div>

    <div class="row">
        <div class="col-3">
          <div class="input-form">
            <span class="select">
              <%= f.select :matiere_id, @matieres.map { |m| [m.title, m.id] }, label: "Matiere" %>
            </span>
          </div>
        </div>
        <div class="col-3">
          <div class="input-form">
            <span class="select">
              <%= f.select :level_id, @levels.map { |l| [l.title, l.id] }, label: "Niveau" %>
            </span>
          </div>
        </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Créer le Renforcément",  class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
    <%= bootstrap_form_for(@course) do |f| %>

    <div class="form-inputs">
      <%= f.text_field :title, label: 'Titre du Sujet:', placeholder:"Ecrire le titre du sujet" %>
      <%= f.text_area :content, label: 'Sujet:', id: 'summernote'  %>
      <!--
        <button id="edit" class="btn btn-primary" onclick="edit()" type="button">Edit 1</button>
        <button id="save" class="btn btn-primary" onclick="save()" type="button">Save 2</button>
        <div class="click2edit">click2edit</div>
      </!-->
    </div>

    <div class="row">
        <div class="col-3">
          <div class="input-form">
            <span class="select">
              <%= f.select :matiere_id, @matieres.map { |m| [m.title, m.id] }, label: "Matiere" %>
            </span>
          </div>
        </div>
        <div class="col-3">
          <div class="input-form">
            <span class="select">
              <%= f.select :level_id, @levels.map { |l| [l.title, l.id] }, label: "Niveau" %>
            </span>
          </div>
        </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Ajouter le Sujet",  class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>


