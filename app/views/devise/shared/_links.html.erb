<%- if controller_name != 'sessions' %>
<br />
  <p>
    Pour s'inscrire?
    <%= link_to "Connecter", new_session_path(resource_name), class: "font-bold" %> <br />
  </p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<br />
  <p>
  Nouveau?
  <%= link_to "Créer un compte", new_registration_path(resource_name), class: "font-bold" %><br />
  </p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Vous n'avez pas reçcu les instructions de confirmation ?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Vous n'avez pas reçcu les instructions de Deblocage?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "S'inscrire avec  #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
