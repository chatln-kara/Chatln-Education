
  <%= bootstrap_form_for(@recrutement, label_errors: true, inline_errors: true) do |f| %>
    <%= f.error_summary %>

    <div class="form-inputs">
      <%= f.text_field :title, label: 'Titre:', placeholder:"Job Title" %>
      <%= f.text_area :content, label: 'Description du Poste:', id: 'recrutement'  %>
    </div>

    <div class="row">
        <div class="col-5  col-md-3 col-lg-3">
          <div class="input-form">
            <span class="select">
              <%= f.select :city,
                   Recrutement::CITY,
                   hide_label: true,
                   prompt: "La ville:",
                   placeholder:"Ville Job:" %>

            </span>
          </div>
        </div>
         <div class="col-5  col-md-3 col-lg-3">
          <div class="input-form">
            <span class="select">
              <%= f.select :status,
                   Recrutement::STATUS,
                   hide_label: true,
                   placeholder:"Status:" %>

            </span>
          </div>
        </div>
        <div class="col-5 col-md-3 col-lg-3">
          <div class="input-form">
            <span class="select">
              <%= f.select :role,
                   Recrutement::ROLE,
                   hide_label: true,
                   prompt: "role:",
                   placeholder:"Ex: City Manager:" %>
            </span>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "CrÃ©er Un Job",  class: "btn btn-primary" %>
      </div>
    <% end %>
