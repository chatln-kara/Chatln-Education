<div class="card">
  <div class="card-header-r mx-auto m-4">
    <p class="font-bold text-5xl">
      590 Jobs pour les profs partenaires sur CHATLN !</p>
    <p class="mt-20">
      Nous partageons le connaissances dans 45 Villes de la CÃ´te d'Ivoire. Rejoignez nous !
    </p>
  </div>
</div>


<div class="row bg-gray-200">
<!-- each recrutement/!-->
<% @recrutements.each do |recrute| %>

<% if recrute.role != "City Manager" %>
  <div class="col-12 col-md-4 col-lg-4">
    <div class="container mt-2 mx-auto">
      <!-- prof/!-->
      <div class="card card-block card-r">
        <!-- Job Title/!-->
        <div class="card-header bg-red-400">
        <%= link_to recrute, class: "font-bold text-white mx-auto text-2xl hover:no-underline" do %>
            <%= recrute.title %>
        <% end %>
        </div>
        <!-- Apply button/!-->
        <%= link_to recrute, class: "mx-auto font-bold m-4 bg-gray-200 hover:no-underline hover:font-bold" do %>
          <span class="m-2 rounded-r-md rounded-l-md">Je postule</span>
        <% end %>
        <!-- State/!-->
        <%= link_to recrute, class: "text-right text-sm font-bold m-1 hover:no-underline" do %>
            <i class="fa fa-user-circle-o" aria-hidden="true"></i> <%= recrute.count_job %> Profs <%= recrute.city %>
         <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="col-12 col-md-4 col-lg-4">
    <div class="container mt-2 mx-auto">
      <!-- prof/!-->
      <div class="card card-block card-r">
        <!-- Job Title/!-->
        <div class="card-header bg-blue-400">
          <%= link_to recrute, class: "font-bold text-white mx-auto text-2xl hover:no-underline" do %>
              <%= recrute.title %>
          <% end %>
        </div>
        <!-- Apply button/!-->
        <%= link_to recrute, class: "mx-auto font-bold m-4 bg-gray-200 hover:no-underline hover:font-bold" do %>
          <span class="m-2 rounded-r-md rounded-l-md">Je postule !</span>
        <% end %>
        <!-- State/!-->
        <%= link_to recrute, class: "text-right text-sm font-bold m-1 hover:no-underline" do %>
            <i class="fa fa-user-circle-o" aria-hidden="true"></i> <%= recrute.count_job %> Prof <%= recrute.city %>
         <% end %>
      </div>
    </div>
  </div>
<% end %>
<% end %>
</div>





