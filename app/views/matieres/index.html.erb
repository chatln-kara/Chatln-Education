<h1 class="text-3xl">Matières</h1>

  <div class="col-end-10">
    <%= link_to 'Créer une matière', new_matiere_path, class:'btn btn-dark md:justify-end' %>
  </div>


<table class="table col-md-10">
  <thead>
    <tr>
      <th>Matières</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @matieres.each do |matiere| %>
    <tr>
      <td><%= link_to matiere.title, matiere %></td>
      <td>
        <div class="font-bold">
          <%= link_to 'Voir', matiere, class:'btn btn-dark' %>
          <%= link_to 'Modifier', edit_matiere_path(matiere), class:'btn btn-primary' %>
          <%= link_to 'Supprimer', matiere, class:'btn btn-danger', method: :delete, data: { confirm: "La suppression sera definitive? " } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
